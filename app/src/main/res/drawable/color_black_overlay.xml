<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--設定圓角的尺寸-->
            <corners
                android:radius="1dp"/>
        </shape>
    </item>
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <!--設定形狀的顏色-->
            <solid android:color="#FFEB3B" />
            <!--設定圓角的尺寸-->
            <corners android:radius="6dp" />
            <!--設定內容與邊界的距離-->
        </shape>
    </item>
</layer-list>