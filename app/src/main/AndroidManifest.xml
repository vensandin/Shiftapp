<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecmaker.shiftapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="false"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SlidingPane">
        <activity
            android:name="com.ecmaker.shiftapp.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.ecmaker.shiftapp.PinCodeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ecmaker.shiftapp.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustUnspecified"></activity>
    </application>

</manifest>